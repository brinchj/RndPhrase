{
    "manifest_version": 2,
    "content_scripts": [
        {
            "js": [
                "overlay.js"
            ],
            "matches": [
                "http://*/*", "https://*/*"
            ],
            "permissions": [],
            "all_frames": true
        }
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "name": QQQ(NAME),
    "description": QQQ(DESC),
    "version": QQQ(VERSION),
    "options_page": "options.html",
    "permissions": [
      "storage"
    ],
    "icons": {
        "64": "icon.png",
        "128": "icon.png"
    }
}
